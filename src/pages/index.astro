---
import PreLoader from '@/components/pre-loader.astro';
import FondoMusica from '@/components/fondo-musica.astro';
import ControladorMusica from '@/components/controlador-musica.astro';
import Layout from '@/layouts/Layout.astro';
import Portada from '@/blocks/portada.astro';
import CuentaRegresiva from '@/blocks/cuenta-regresiva.astro';
import CeremoniaFiesta from '@/blocks/ceremonia-fiesta.astro';
import Galeria from '@/blocks/galeria.astro';
import Regalos from '@/blocks/regalos.astro';
import Instagram from '@/blocks/instagram.astro';
import Fiesta from '@/blocks/fiesta.astro';
import Footer from '@/blocks/footer.astro';

import CbuModal from '../modals/cbu.modal.astro';
import TipsModal from '../modals/tips.modal.astro';
import VestuarioModal from '@/modals/vestuario.modal.astro';
import MapaModal from '@/modals/mapa.modal.astro';
import AsistenciaModal from '@/modals/asistencia.modal.astro';

const NAME = "Elizabeth";
const FECHA_TEXT = "Domingo 24 de Mayo - 21hs a 05hs";
const START_DATE = "2026-05-24 21:00:00";
const END_DATE = "2026-05-25 05:00:00";
const SALON = "Jano's San Telmo Boutique";
const DIRECCION = "México 334, C1097 Cdad. Autónoma de Buenos Aires";
const HASHTAG = "#mis15eli";
const PORTADA_TEXT = "Te espero para compartir la alegría de esa noche que será para mí mágica, inolvidable y única.";
const PORTADA_FECHA = "24.05.2026";

const TITULAR = import.meta.env.SECRET_TITULAR;
const NUMERO_CUENTA = import.meta.env.SECRET_NUMERO_CUENTA;
const CBU = import.meta.env.SECRET_CBU;
const ALIAS = import.meta.env.SECRET_ALIAS;

const NRO_ASISTENCIA = import.meta.env.SECRET_NRO_ASISTENCIA;
const NRO_MUSICA = import.meta.env.SECRET_NRO_MUSICA;

const TIP1 = "Si tenés alguna dieta especial o alergia (celiaquía, veganismo, etc.), te pedimos que nos avises antes del 15/4 inclusive para poder tenerlo en cuenta.";
const TIP2 = "Vengan con el celu cargado… ¡quiero muchas fotos y recuerdos con ustedes!";
const TIP3 = "Y lo más importante: vení con ganas de bailar, reír y disfrutar una noche inolvidable junto a amigos.";

const DRESSCODE_H1 = "Elegante"
const DRESSCODE_H2 = "(No usar Azul/Azul noche)"

---



<PreLoader />

<Layout title="Mis 15 - Invitación">
	<!-- <FondoMusica 
		name={NAME}
	/> -->
	<!-- <ControladorMusica /> -->

	<Portada 
		name={NAME}
		text={PORTADA_TEXT}
		fecha={PORTADA_FECHA}
	/>
	<CuentaRegresiva />
	<CeremoniaFiesta 
		name={NAME}
		startDate={START_DATE}
		endDate={END_DATE}
		fechatext={FECHA_TEXT}
		salon={SALON}
		direccion={DIRECCION}
	/>
	<!-- <Galeria /> -->
	<Regalos />
	<Fiesta />
	
	<Footer name={NAME} />


	<!-- Modals -->
	<CbuModal 
		titular={TITULAR}
		nroCuenta={NUMERO_CUENTA}
		cbu={CBU}
		alias={ALIAS}
	/>

	<TipsModal 
		tip1={TIP1}
		tip2={TIP2}
		tip3={TIP3}
	/>

	<VestuarioModal 
		dressCode={DRESSCODE_H1}
		dressCode2={DRESSCODE_H2}
	/>
	<MapaModal />
	<AsistenciaModal 
		nroWhatsapp={NRO_ASISTENCIA}'
	/>


</Layout>
