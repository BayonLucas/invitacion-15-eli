---
import PreLoader from '@/components/pre-loader.astro';
import FondoMusica from '@/components/fondo-musica.astro';
import ControladorMusica from '@/components/controlador-musica.astro';
import Layout from '@/layouts/Layout.astro';
import Portada from '@/blocks/portada.astro';
import CuentaRegresiva from '@/blocks/cuenta-regresiva.astro';
import CeremoniaFiesta from '@/blocks/ceremonia-fiesta.astro';
import Galeria from '@/blocks/galeria.astro';
import Regalos from '@/blocks/regalos.astro';
import Instagram from '@/blocks/instagram.astro';
import Footer from '@/blocks/footer.astro';
import CbuModal from '../modals/cbu.modal.astro';

const NAME = "Elizabeth";
const FECHA_TEXT = "Domingo 24 de Mayo - 21hs";
const START_DATE = "2026-05-24 21:00:00";
const END_DATE = "2026-05-24 23:00:00";
const SALON = "Salon Jano's";
const DIRECCION = "Perú 338 - CABA"
const HASHTAG = "#mis15eli";
const PORTADA_TEXT = "Te espero para compartir la alegría de esa noche que será para mi mágica, inolvidable y única.";
const PORTADA_FECHA = "24.05.2026";

const TITULAR = import.meta.env.SECRET_TITULAR;
const NUMERO_CUENTA = import.meta.env.SECRET_NUMERO_CUENTA;
const CBU = import.meta.env.SECRET_CBU;
const ALIAS = import.meta.env.SECRET_ALIAS;

---



<PreLoader />

<Layout title="Mis 15 - Invitación">
	<FondoMusica 
		name={NAME}
	/>
	<ControladorMusica />

	<Portada 
		name={NAME}
		text={PORTADA_TEXT}
		fecha={PORTADA_FECHA}
	/>
	<CuentaRegresiva />
	<CeremoniaFiesta 
		name={NAME}
		startDate={START_DATE}
		endDate={END_DATE}
		fechatext={FECHA_TEXT}
		salon={SALON}
		direccion={DIRECCION}
	/>
	<Galeria />
	<Regalos />
	<Instagram 
		hashtag={HASHTAG}
	/>
	<Footer name={NAME} />


	<!-- Modals -->
	<CbuModal 
		titular={TITULAR}
		nroCuenta={NUMERO_CUENTA}
		cbu={CBU}
		alias={ALIAS}
	/>




</Layout>
